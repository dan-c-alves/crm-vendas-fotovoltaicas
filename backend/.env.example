# Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Database (PostgreSQL recomendado)
# Exemplo Railway interno:
# DATABASE_URL=postgresql://postgres:senha@postgres.railway.internal:5432/railway
# Exemplo Supabase:
# DATABASE_URL=postgresql://usuario:senha@host.supabase.co:5432/postgres
DATABASE_URL=postgresql://usuario:senha@host:5432/base

# Commission Settings
COMISSAO_PERCENTAGEM=0.05
IVA_TAXA=0.23

# Security
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google OAuth / Calendar
GOOGLE_CLIENT_ID=seu_client_id
GOOGLE_CLIENT_SECRET=seu_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Cloudinary
CLOUDINARY_CLOUD_NAME=seu_cloud
CLOUDINARY_API_KEY=seu_api_key
CLOUDINARY_API_SECRET=seu_api_secret

# Email (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-aplicacao

